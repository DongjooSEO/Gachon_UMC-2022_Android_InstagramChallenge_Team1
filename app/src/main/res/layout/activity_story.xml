<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shop_content5"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
        android:id="@+id/story_progress_pb"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:background="@drawable/rectangle_gray_border"
        android:max="1500"
        android:progress="500"
        android:progressBackgroundTint="#A4A4A4"
        android:progressTint="@color/white"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/story_profil_img_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/img_album_exp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/story_progress_pb"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/story_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aaaaaa"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/story_profil_img_iv"
        app:layout_constraintBottom_toBottomOf="@id/story_profil_img_iv"
        app:layout_constraintStart_toEndOf="@id/story_profil_img_iv"/>

    <TextView
        android:id="@+id/story_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6시간"
        android:textStyle="bold"
        android:textColor="#D8D8D8"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/story_name_tv"
        app:layout_constraintTop_toTopOf="@id/story_name_tv"
        app:layout_constraintBottom_toBottomOf="@id/story_name_tv"/>


</androidx.constraintlayout.widget.ConstraintLayout>