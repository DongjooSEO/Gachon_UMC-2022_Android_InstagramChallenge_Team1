<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tkdydwkdlfmatjsxor_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름 선택"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/skwnddp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나중에 언제든지 변경할 수 있습니다."
        android:layout_marginTop="5dp"
        android:textColor="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/tkdydwkdlfmatjsxor_tv"
        app:layout_constraintStart_toStartOf="@id/tkdydwkdlfmatjsxor_tv"
        app:layout_constraintEnd_toEndOf="@id/tkdydwkdlfmatjsxor_tv"/>

    <EditText
        android:id="@+id/signup_user_name_et"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/insta_rec"
        android:hint="사용자 이름"
        app:layout_constraintTop_toBottomOf="@id/skwnddp_tv"
        app:layout_constraintStart_toStartOf="@id/tkdydwkdlfmatjsxor_tv"
        app:layout_constraintEnd_toEndOf="@id/tkdydwkdlfmatjsxor_tv"/>

    <Button
        android:id="@+id/signup_user_name_btn"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:backgroundTint="#179EF6"
        android:text="다음"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/signup_user_name_et"
        app:layout_constraintStart_toStartOf="@id/signup_user_name_et"
        app:layout_constraintEnd_toEndOf="@id/signup_user_name_et"/>



</androidx.constraintlayout.widget.ConstraintLayout>