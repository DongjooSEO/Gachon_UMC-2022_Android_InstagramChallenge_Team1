<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/shop_cart_back_iv"
        android:layout_width="22dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/shop_search_back"
        android:layout_marginTop="13dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/shop_cart_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장바구니"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@id/shop_cart_back_iv"
        app:layout_constraintTop_toTopOf="@id/shop_cart_back_iv"
        app:layout_constraintBottom_toBottomOf="@id/shop_cart_back_iv"/>

    <ImageView
        android:id="@+id/shop_cart_empty_img_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shop_cart"
        android:background="@drawable/circle_border_black"
        android:padding="25dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_cart_title_tv"/>

    <TextView
        android:id="@+id/shop_cart_empty_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장바구니가 비어있습니다"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/shop_cart_empty_img_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/shop_cart_empty_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이제 Instagram을 나가지 않고도 특정 브랜드의 제품을 구매할 수 있습니다"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shop_cart_empty_title_tv"/>


</androidx.constraintlayout.widget.ConstraintLayout>