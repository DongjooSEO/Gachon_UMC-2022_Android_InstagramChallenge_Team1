<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_wishlist_img_iv"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/shop_content1"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_wishlist_product_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Handmade Note"
        android:textColor="@color/black"
        android:textColorHighlight="@color/black"
        android:textSize="13sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:shadowColor="@color/gray_color"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/item_wishlist_img_iv"
        app:layout_constraintTop_toBottomOf="@id/item_wishlist_img_iv"/>

    <TextView
        android:id="@+id/item_wishlist_company_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29cm.official"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:shadowColor="@color/gray_color"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        app:layout_constraintStart_toStartOf="@id/item_wishlist_product_tv"
        app:layout_constraintTop_toBottomOf="@id/item_wishlist_product_tv"/>

    <TextView
        android:id="@+id/item_wishlist_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7,600"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:shadowColor="@color/gray_color"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/item_wishlist_product_tv"
        app:layout_constraintTop_toBottomOf="@id/item_wishlist_company_tv"/>

    <ImageView
        android:id="@+id/item_wishlist_wish_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_save"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/item_wishlist_product_tv"
        app:layout_constraintEnd_toEndOf="@id/item_wishlist_img_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>