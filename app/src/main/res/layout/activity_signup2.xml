<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/qlalfqjsghaksemfrl_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 만들기"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/qhdksdmfdnlgo_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보안을 위해 비밀번호는 6자 이상이어야 합니다."
        android:layout_marginTop="5dp"
        android:textColor="@color/gray_color"
        app:layout_constraintTop_toBottomOf="@id/qlalfqjsghaksemfrl_tv"
        app:layout_constraintStart_toStartOf="@id/qlalfqjsghaksemfrl_tv"
        app:layout_constraintEnd_toEndOf="@id/qlalfqjsghaksemfrl_tv"/>


    <EditText
        android:id="@+id/signup_user_name_et"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:background="@drawable/insta_rec"
        android:layout_marginTop="10dp"
        android:hint="비밀번호"
        app:layout_constraintTop_toBottomOf="@id/qhdksdmfdnlgo_tv"
        app:layout_constraintStart_toStartOf="@id/qlalfqjsghaksemfrl_tv"
        app:layout_constraintEnd_toEndOf="@id/qlalfqjsghaksemfrl_tv"/>

    <CheckBox
        android:id="@+id/signup_password_ischecked_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/signup_user_name_et"
        app:layout_constraintStart_toStartOf="@id/signup_user_name_et"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 저장"
        android:layout_marginStart="-8dp"
        app:layout_constraintStart_toEndOf="@id/signup_password_ischecked_cb"
        app:layout_constraintTop_toTopOf="@id/signup_password_ischecked_cb"
        app:layout_constraintBottom_toBottomOf="@id/signup_password_ischecked_cb"/>


    <Button
        android:id="@+id/signup_user_name_btn"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:backgroundTint="#179EF6"
        android:text="다음"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/signup_password_ischecked_cb"
        app:layout_constraintStart_toStartOf="@id/signup_user_name_et"
        app:layout_constraintEnd_toEndOf="@id/signup_user_name_et"/>



</androidx.constraintlayout.widget.ConstraintLayout>