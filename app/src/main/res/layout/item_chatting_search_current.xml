<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_search_current_user_img_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_album_exp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_search_current_user_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가나다"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/item_search_current_user_img_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_search_current_user_img_iv"
        app:layout_constraintStart_toEndOf="@id/item_search_current_user_img_iv"
        app:layout_constraintVertical_chainStyle="packed"/>

    //이미지로 바꿔야되나?
    <TextView
        android:id="@+id/item_search_current_delete_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="20sp"
        android:textColor="@color/gray_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_search_current_user_img_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_search_current_user_img_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>