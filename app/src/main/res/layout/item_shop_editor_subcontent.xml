<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_shop_editor_subcontent_img"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/shop_content7"
        android:scaleType="fitXY"
        android:background="@drawable/shop_round_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_shop_editor_subcontent_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Crochet Wave Hat"
        android:textColor="@color/black"
        android:textSize="11sp"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_shop_editor_subcontent_img"
        app:layout_constraintStart_toStartOf="@id/item_shop_editor_subcontent_img"/>

    <TextView
        android:id="@+id/item_shop_editor_subcontent_company"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="fwrd"
        android:textColor="@color/gray_color"
        android:textSize="8sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/item_shop_editor_subcontent_name"
        app:layout_constraintStart_toStartOf="@id/item_shop_editor_subcontent_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>