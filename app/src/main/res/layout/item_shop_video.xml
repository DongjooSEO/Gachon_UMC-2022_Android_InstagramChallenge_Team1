<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_shop_video_thumbnail_iv"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/shop_content1"
        android:scaleType="fitXY"
        android:background="@drawable/shop_round_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/item_shop_video_user_tv"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="oldair.official"
        android:textColor="@color/white"
        android:textColorHighlight="@color/black"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:shadowColor="@color/gray_color"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/item_shop_video_thumbnail_iv"
        app:layout_constraintBottom_toTopOf="@id/item_shop_video_count_tv"/>

    <TextView
        android:id="@+id/item_shop_video_count_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="조회 0회"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:shadowColor="@color/gray_color"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="@id/item_shop_video_thumbnail_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_shop_video_thumbnail_iv"/>


</androidx.constraintlayout.widget.ConstraintLayout>